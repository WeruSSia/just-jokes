<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/joke_unfav"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/full_heart"
            android:contentDescription="@string/unfavourite"/>
    </LinearLayout>

    <TextView
        android:id="@+id/joke_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginEnd="5dp">

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/upvote"
            android:contentDescription="@string/upvotes" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/downvote"
            android:contentDescription="@string/downvotes" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/favourite_upvotes"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="@string/upvotes_number"/>

        <TextView
            android:id="@+id/favourite_downvotes"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="@string/downvotes_number"/>

    </LinearLayout>
</LinearLayout>