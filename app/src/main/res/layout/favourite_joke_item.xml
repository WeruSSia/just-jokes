<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/joke_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/upvote"
            android:contentDescription="@string/upvotes" />

        <TextView
            android:id="@+id/favourite_upvotes"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="@string/upvotes_number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/downvote"
            android:contentDescription="@string/downvotes" />

        <TextView
            android:id="@+id/favourite_downvotes"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="@string/downvotes_number" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/joke_unfav"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/full_heart"
        android:contentDescription="@string/unfavourite" />
</LinearLayout>