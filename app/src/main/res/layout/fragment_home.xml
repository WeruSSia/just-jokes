<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ImageButton
        android:id="@+id/random_joke_button"
        android:layout_width="236dp"
        android:layout_height="232dp"
        android:background="@drawable/smiley"
        android:contentDescription="@string/random_joke"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.196" />

    <TextView
        android:id="@+id/random_joke_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/upvotes_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/random_joke_button"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/upvotes_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/upvotes"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/upvote_button"
        app:layout_constraintEnd_toEndOf="@+id/upvote_button"
        app:layout_constraintStart_toStartOf="@+id/upvote_button" />

    <TextView
        android:id="@+id/downvotes_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/downvotes"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/downvote_button"
        app:layout_constraintEnd_toEndOf="@+id/downvote_button"
        app:layout_constraintStart_toStartOf="@+id/downvote_button" />

    <ImageButton
        android:id="@+id/upvote_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/upvote"
        android:contentDescription="@string/upvote"
        app:layout_constraintBottom_toBottomOf="@+id/favourite_button"
        app:layout_constraintEnd_toStartOf="@+id/favourite_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/favourite_button" />

    <ImageButton
        android:id="@+id/downvote_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/downvote"
        android:contentDescription="@string/downvote"
        app:layout_constraintBottom_toBottomOf="@+id/favourite_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/favourite_button"
        app:layout_constraintTop_toTopOf="@+id/favourite_button"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/favourite_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/empty_heart"
        android:contentDescription="@string/favourite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/unfavourite_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/full_heart"
        android:contentDescription="@string/unfavourite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>